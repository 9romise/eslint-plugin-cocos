{
  "name": "eslint-plugin-cocos",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.4.1",
  "author": "Vida Xie<https://github.com/9romise>",
  "license": "MIT",
  "homepage": "https://github.com/9romise/eslint-plugin-cocos#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/9romise/eslint-plugin-cocos.git"
  },
  "bugs": {
    "url": "https://github.com/9romise/eslint-plugin-cocos/issues"
  },
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "test": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@typescript-eslint/parser": "^8.24.1",
    "@typescript-eslint/utils": "^8.24.1",
    "@vida0905/eslint-config": "^2.1.2",
    "bumpp": "^10.0.3",
    "es-toolkit": "^1.32.0",
    "eslint": "^9.21.0",
    "eslint-vitest-rule-tester": "^1.1.0",
    "nano-staged": "^0.8.0",
    "oxc-transform": "^0.52.0",
    "simple-git-hooks": "^2.11.1",
    "tsdown": "^0.6.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged"
  },
  "nano-staged": {
    "*": "eslint --fix"
  }
}
