{
  "name": "eslint-plugin-cocos",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@10.9.0",
  "author": "Vida Xie<https://github.com/9romise>",
  "license": "MIT",
  "homepage": "https://github.com/9romise/eslint-plugin-cocos#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/9romise/eslint-plugin-cocos.git"
  },
  "bugs": {
    "url": "https://github.com/9romise/eslint-plugin-cocos/issues"
  },
  "keywords": [],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "test": "vitest --typecheck",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "release": "bumpp",
    "prepublishOnly": "pnpm run build",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@typescript-eslint/utils": "^8.31.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.2",
    "@typescript-eslint/parser": "^8.31.0",
    "@vida0905/eslint-config": "^2.1.2",
    "es-toolkit": "^1.36.0",
    "eslint": "^9.25.1",
    "eslint-vitest-rule-tester": "^2.2.0",
    "nano-staged": "^0.8.0",
    "oxc-transform": "^0.67.0",
    "simple-git-hooks": "^2.13.0",
    "tinyglobby": "^0.2.13",
    "tsdown": "^0.9.9",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged"
  },
  "nano-staged": {
    "*": "eslint --fix"
  }
}
